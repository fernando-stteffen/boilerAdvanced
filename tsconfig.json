{
  "compilerOptions": {
    "target": "es2021",
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"],
    },
    "strict": true,                    /* Skip type checking all .d.ts files. */
  },
  "include": ["src"]
}
